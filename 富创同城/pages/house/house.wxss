/* pages/house/house.wxss */

page {
  height: 100%;
}

.main {
  height: 100%;
}

.header {
  top: 0;
  z-index: 2;
  width: 100%;
  height: 80rpx;
  position: fixed;
  font-size: 32rpx;
  background: #f5f5f5;
}

.active {
  color: #05c000;
}

.left {
  color: #333;
}

/* 筛选条件 */

.header-bottom {
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  border-bottom: 1rpx solid #e8e8e8;
}

.header-bottom>view {
  width: 157.5rpx;
  height: 80rpx;
  display: flex;
  margin: 0 15rpx;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  overflow: hidden;
}

.header-bottom>view>text {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.badge {
  width: 40rpx;
  font-size: 18rpx;
  padding-left: 10rpx;
}

/* 筛选条件 */

.term {
  width: 100%;
  z-index: 2;
  color: #050505;
  font-size: 30rpx;
  background: #fff;
}

/* 地区 */

.zone>view,
.rank>view,
.screen>view,
.haLump>view {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}

/* 列表 */

.item {
  margin-top: 80rpx;
}

.item>navigator:last-child {
  margin-bottom: 80rpx;
}

.list {
  overflow: hidden;
  padding: 40rpx 45rpx 30rpx 30rpx;
  border-bottom: 1px solid #e8e8e8;
}

.list-left {
  float: left;
}

.list-right{
  width: 360rpx;
  float: right;
  padding-left: 20rpx;
}

.thumb {
  width: 280rpx;
  height: 210rpx;
  border-radius: 8rpx;
}

.title {
  font-size: 30rpx;
  color: #121212;
  overflow: hidden;
  margin-bottom: 20rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.type, .area {
  font-size: 24rpx;
  color: #9a9a9a;
}

.price {
  font-size: 26rpx;
  color: #f00;
  margin-top: 15rpx;
}

.tab-bar {
  bottom: 0;
  width: 100%;
  height: 100rpx;
  position: fixed;
  overflow: hidden;
  display: flex;
  background: rgba(250, 250, 250, 1);
}

.tab-bar>view {
  width: 50%;
  float: left;
  display: flex;
  font-size: 20rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tab-bar>view>image {
  width: 56rpx;
  height: 56rpx;
}

/* 遮罩层 */

.mask {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  background: #999;
  opacity: 0.6;
}
