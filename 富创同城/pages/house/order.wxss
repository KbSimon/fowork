/* pages/house/order.wxss */

page {
  height: 100%;
}

.main {
  height: 100%;
}

.banner {
  padding: 30rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #e8e8e8;
}

/* 左侧 */

.banner-left {
  float: left;
}

.show {
  width: 280rpx;
  height: 210rpx;
  border-radius: 8rpx;
}

/* 右侧 */

.banner-right {
  float: right;
  width: 400rpx;
  padding-left: 10rpx;
}

.title {
  font-size: 30rpx;
  color: #121212;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  padding-bottom: 10rpx;
  -webkit-box-orient: vertical;
}

.area, .city {
  font-size: 26rpx;
  color: #9a9a9a;
}

.price {
  color: #f00;
  font-size: 18rpx;
  padding-top: 15rpx;
}

.price>text {
  font-size: 34rpx;
}

.form>view {
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 30rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.form>view>label {
  font-size: 32rpx;
  width: 180rpx;
  float: left;
}

.form>view>input {
  width: 400rpx;
  float: right;
  height: 100rpx;
  text-align: right;
  font-size: 28rpx;
}

.picker {
  font-size: 30rpx;
  width: 400rpx;
  height: 80rpx;
  float: right;
  text-align: right;
}

.submit {
  width: 510rpx;
  height: 80rpx;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
  margin-top: 200rpx;
  background: rgba(255, 46, 46, 1);
  border-radius: 40rpx;
}
