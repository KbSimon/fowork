/* pages/login/login.wxss */
page{
  height: 100%;
}

.content{
  height: 100%;
}

.logo {
  width: 324rpx;
  height: 42rpx;
  margin: 0 auto;
  padding: 110rpx 0 180rpx 0;
}

.logo>image {
  width: 100%;
  height: 100%;
}

.form {
  width: 595rpx;
  height: 500rpx;
  margin: 0 auto;
}

.name, .password {
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0 0 0;
  border-bottom: 1px solid #e8e8e8;
}

.name-input, .password-input {
  width: 525rpx;
  height: 90rpx;
  font-size: 36rpx;
  padding: 0 0 0 20rpx;
}

.ico, .see, .close {
  width: 34rpx;
  height: 34rpx;
}

.shut {
  width: 30rpx;
  height: 30rpx;
  font-size: 24rpx;
  color: #9a9a9a;
  line-height: 26rpx;
  text-align: center;
  border-radius: 50%;
  border: 1px solid #9a9a9a;
}

.login-btn {
  width: 590rpx;
  height: 84rpx;
  color: #fff;
  font-size: 40rpx;
  line-height: 84rpx;
  border-radius: 42rpx;
  background: #ff3131;
  margin: 180rpx 0 0 0;
}

.register-btn {
  width: 590rpx;
  margin: 0 auto;
  font-size: 32rpx;
  line-height: 84rpx;
  text-align: center;
}

.forget {
  height: 360rpx;
}

.forget-btn {
  color: #9a9a9a;
  text-align: center;
  font-size: 30rpx;
  margin: 270rpx 0 0 0;
}
