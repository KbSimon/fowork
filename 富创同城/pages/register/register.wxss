/* pages/register/register.wxss */

page {
  height: 100%;
}

.content {
  height: 100%;
}

.logo {
  width: 324rpx;
  height: 34rpx;
  margin: 0 auto;
  padding: 140rpx 0 80rpx 0;
}

.logo>image {
  width: 324rpx;
  height: 34rpx;
}

.form {
  width: 595rpx;
  height: 500rpx;
  margin: 0 auto;
}

.form>view:not(:last-child) {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 40rpx 0 0 0;
  border-bottom: 1px solid #e8e8e8;
}

.name-input, .code-input, .password-input {
  width: 525rpx;
  height: 90rpx;
  font-size: 36rpx;
  padding: 0 0 0 20rpx;
}

.shut {
  width: 30rpx;
  height: 30rpx;
  font-size: 24rpx;
  color: #9a9a9a;
  line-height: 26rpx;
  text-align: center;
  border-radius: 50%;
  border: 1px solid #9a9a9a;
}

.password-input {
  width: 345rpx;
}

.imgCode {
  width: 198rpx;
  height: 66rpx;
  border-radius: 33rpx;
}

.ico, .see, .close {
  width: 34rpx;
  height: 34rpx;
}

.see{
  right: 0;
}

.send {
  width: 198rpx;
  height: 66rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 66rpx;
  border-radius: 33px;
  padding: none;
}

.send::after{
  border: none;
}

.code-btn {
  display: block;
  width: 590rpx;
  height: 84rpx;
  color: #fff;
  font-size: 36rpx;
  line-height: 84rpx;
  text-align: center;
  margin: 120rpx 0 0 0;
  background: rgba(255, 49, 49, 1);
  border-radius: 42px;
}

.deal{
  display: flex;
  color: #050505;
  font-size: 22rpx;
  padding: 30rpx 0;
  justify-content: center;
}

.deal>navigator{
  color: #0075DB;
}
