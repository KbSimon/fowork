/* pages/firm/news.wxss */

.navbar {
  top: 0;
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  text-align: center;
  font-size: 32rpx;
}

.navbar>view {
  width: 50%;
  float: left;
  line-height: 80rpx;
}

/* 新闻 */

.title {
  font-size: 40rpx;
  color: #000;
  padding: 35rpx 35rpx;
}

.list {
  overflow: hidden;
  padding: 30rpx 50rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.list-left {
  float: left;
}

.list-left>image {
  width: 230rpx;
  height: 165rpx;
}

.list-right {
  float: right;
  width: 400rpx;
  padding-left: 25rpx;
}

.headline {
  font-size: 28rpx;
  color: #050505;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.msg {
  display: flex;
  margin-top: 55rpx;
}

.type {
  width: 69rpx;
  height: 35rpx;
  font-size: 23rpx;
  border-radius: 4rpx;
  text-align: center;
  line-height: 35rpx;
  color: #FF3131;
  border: 1rpx solid rgba(255, 49, 49, 1);
}

.time {
  float: left;
  font-size: 27rpx;
  color: #a0a0a0;
  margin: 10rpx 0 0 20rpx;
}

/* bar */

.bar {
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  position: fixed;
  margin-top: 200rpx;
  overflow: hidden;
  background: rgba(250, 250, 250, 1);
}

.bar>view {
  width: 50%;
  float: left;
  display: flex;
  font-size: 20rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.bar>view>image {
  width: 56rpx;
  height: 56rpx;
}
