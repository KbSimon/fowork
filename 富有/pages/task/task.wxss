/* pages/task/task.wxss */

page {
  width: 100%;
  height: 100%;
}

.content {
  height: 100%;
}

.banner {
  width: 100%;
  height: 330rpx;
  position: relative;
}

.banner>image {
  width: 100%;
  height: 330rpx;
}

.top {
  top: 0;
  left: 0;
  width: 100%;
  height: 330rpx;
  padding: 40rpx 0 0 0;
  position: absolute;
}

.integral {
  display: flex;
  justify-content: center;
}

.label {
  width: 370rpx;
  height: 66rpx;
  margin: 0 auto;
  position: relative;
}

.total {
  font-size: 26rpx;
  color: #fff;
  line-height: 50rpx;
  position: absolute;
}

.total::before {
  content: "我的积分:";
  padding: 0 10rpx 0 0;
}

.check {
  display: flex;
  overflow: hidden;
  padding: 0 25rpx;
  margin: 65rpx 0 0 0;
}

.check>view {
  float: left;
  flex: 7;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.check>view>text {
  font-size: 24rpx;
  padding: 10rpx 0 0 0;
}

.yet, .get {
  width: 78rpx;
  height: 78rpx;
  border-radius: 50%;
}

.rules {
  right: 0;
  top: 55rpx;
  width: 111rpx;
  height: 42rpx;
  color: #fff;
  position: absolute;
  line-height: 42rpx;
  text-align: center;
  font-size: 22rpx;
  background: rgba(255, 255, 255, 0.4);
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

/* 赚钱 */

.teach {
  width: 100%;
  height: 110rpx;
  display: flex;
  padding: 0 30rpx;
  align-items: center;
}

.line {
  width: 235rpx;
  height: 1px;
  background: rgba(255, 75, 102, 1);
}

.icon {
  width: 28rpx;
  height: 28rpx;
}

.earn {
  font-size: 30rpx;
  color: #ff5764;
  padding: 0 20rpx;
}

.earn>text {
  padding: 0 0 0 15rpx;
}

/* 赚钱 */

.money>view {
  width: 710rpx;
  height: 170rpx;
  margin: 0 auto 20rpx auto;
  overflow: hidden;
  background: rgba(255, 255, 255, 1);
  border-radius: 12rpx;
}

.money-left {
  width: 480rpx;
  height: 170rpx;
  float: left;
  display: flex;
  align-items: center;
}

.ico>image {
  width: 70rpx;
  height: 70rpx;
}

.ico {
  float: left;
  padding: 0 35rpx;
}

.int {
  width: 28rpx;
  height: 28rpx;
  padding: 0 10rpx;
}

.task {
  font-size: 30rpx;
}

.money-right {
  width: 170rpx;
  height: 170rpx;
  float: right;
  display: flex;
  align-items: center;
  /* margin: 0 30rpx 0 0; */
}

.money-right>view {
  width: 130rpx;
  height: 50rpx;
  color: #ff4b66;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  border: 1rpx solid rgba(255, 75, 102, 1);
  border-radius: 25rpx;
}
