.shop{
  width: 330rpx;
  float: left;
  background: #fff;
}

.shop>image {
  width: 330rpx;
  height: 300rpx;
  border-radius: 10rpx;
}

.shop>text {
  font-size: 30rpx;
  color: #050505;
}

/* 价格 */

.price {
  font-size: 24rpx;
  margin: 0 0 60rpx 0;
}

.old, .new {
  font-size: 30rpx;
  color: #ff3131;
}

.old::before {
  content: "￥";
}

.old::after {
  content: "+";
}

.ico {
  width: 24rpx;
  height: 22rpx;
  margin: 0 5rpx;
}
