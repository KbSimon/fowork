/* pages/check/check.wxss */

page {
  height: 100%;
  background: #f5f5f5;
}

.main {
  padding: 0 30rpx;
  background: #fff;
}

.header {
  width: 100%;
  height: 280rpx;
  padding: 30rpx 0 0 0;
}

.head {
  width: 100%;
  height: 280rpx;
}

.message {
  top: 0;
  display: flex;
  position: absolute;
  justify-content: center;
  padding: 60rpx 0 0 30rpx;
}

/* 头像 */

.msg-left>image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #eee;
  margin: 30rpx 0 0 0;
}

/* 签到 */

.msg-right {
  margin: 0 0 0 30rpx;
}

.days {
  font-size: 30rpx;
  color: #050505;
}

.days>text {
  color: #ff3131;
  font-size: 60rpx;
}

.total {
  display: flex;
  font-size: 26rpx;
  color: #050505;
}

.total>navigator {
  margin: 0 0 0 20rpx;
}

.rules {
  width: 100%;
  height: 130rpx;
  display: flex;
  font-size: 30rpx;
  justify-content: space-between;
  align-items: center;
}

.num {
  color: #050505;
}

.num>text {
  color: #ff3131;
}

.num>text::after {
  content: "积分";
}

.rules-ico {
  width: 26rpx;
  height: 26rpx;
}

.rules-text>text {
  font-size: 28rpx;
  color: #5a5a5a;
  padding: 0 0 0 10rpx;
}

/* 内容 */

.details {
  width: 690rpx;
  height: 650rpx;
  border: 1px solid rgba(232, 232, 232, 1);
  border-radius: 10px;
}

.first {
  width: 38rpx;
  height: 38rpx;
  color: #fff;
  line-height: 38rpx;
  font-size: 32rpx;
  text-align: center;
  background: rgba(255, 49, 49, 1);
  border-radius: 50%;
}

.check-top {
  padding: 65rpx 0 0 0;
}

.check-top>view, .check-bottom>view {
  display: flex;
  float: left;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.check-top>view {
  width: 172.5rpx;
}

.check-bottom>view {
  width: 230rpx;
}

.check-top>view>image {
  width: 110rpx;
  height: 94rpx;
  padding: 20rpx 0;
}

.check-top>view>text, .check-bottom>view>text {
  font-size: 28rpx;
}

.check-bottom {
  padding: 110rpx 0 0 0;
}

.check-bottom>view>image {
  width: 160rpx;
  height: 90rpx;
  padding: 20rpx 0;
}

.check-bottom>view:nth-child(2)>image {
  width: 100rpx;
  height: 94rpx;
}

.active {
  color: #ff3131;
}

.bar {
  height: 120rpx;
  display: flex;
  padding: 15px 0;
  font-size: 30rpx;
  color: #050505;
  justify-content: center;
  align-items: center;
}

.how {
  margin: 0 20rpx;
}

.how>image {
  width: 28rpx;
  height: 28rpx;
  margin: 0 10rpx 0 0;
}

.wire {
  width: 210rpx;
  height: 2rpx;
  background: rgba(0, 0, 0, 1);
}

.task {
  width: 750rpx;
  height: 80rpx;
  font-size: 26rpx;
  padding: 0 30rpx;
  line-height: 80rpx;
  background: #f5f5f5;
}

.new-task {
  height: 410rpx;
  background: #fff;
}

.everyday {
  height: 400rpx;
  background: #fff;
}

.invite {
  height: 215rpx;
  background: #fff;
}

.task-left {
  float: left;
  padding: 50rpx 0 0 75rpx;
}

.task-left>view:nth-child(1) {
  font-size: 28rpx;
}

.task-left>view:nth-child(2) {
  font-size: 22rpx;
  color: #9A9A9A;
  padding: 10rpx 0 0 0;
}

.task-right{
  float: right;
  padding: 40rpx 40rpx 0 0;
}

button {
  width: 123rpx;
  height: 50rpx;
  color: #fff;
  padding: 0 0;
  font-size: 26rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 0;
  background: rgba(0, 0, 0, 1);
}

.invite-btn{
  float: right;
  margin: 15rpx 70rpx 0 0;
}
