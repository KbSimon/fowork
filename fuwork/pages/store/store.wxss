/* pages/store/store.wxss */

.content {
  background: #f5f5f5;
}

.banner {
  height: 250rpx;
}

.banner>image {
  width: 100%;
  height: 250rpx;
}

.store {
  height: 615rpx;
  background: #fff;
  padding: 0 30rpx;
  margin: 0 0 30rpx 0;
}

.store-top {
  display: flex;
  line-height: 135rpx;
  align-items: center;
}

.logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #fff;
  border: 2rpx solid #ededed;
}

.company {
  font-size: 32rpx;
  padding: 0 0 0 40rpx;
}

.store-middle {
  height: 390rpx;
}

.store-middle>image {
  width: 100%;
  height: 390rpx;
}

.store-bottom{
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tag {
  width: 135rpx;
  height: 46rpx;
  color: #FF3131;
  font-size: 24rpx;
  border-radius: 23rpx;
  text-align: center;
  line-height: 46rpx;
  background: rgba(255, 49, 49, 0.1);
}

.skim{
  color: #FF3131;
  font-size: 30rpx;
}

.skim::after{
  content: "浏览";
  color: #9A9A9A;
  font-size: 26rpx;
}
