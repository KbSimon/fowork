/* pages/mall/mall.wxss */

page {
  height: 100%;
}

.content {
  height: 100%;
}

.banner {
  height: 250rpx;
}

.banner>image {
  width: 100%;
  height: 250rpx;
}

/* head */

.head {
  height: 270rpx;
  display: flex;
  background: #fff;
}

.hot, .share, .record {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.hot>image, .share>image, .record>image {
  width: 90rpx;
  height: 90rpx;
}

.hot>text, .share>text, .record>text {
  font-size: 28rpx;
  color: #050505;
  padding: 30rpx 0 0 0;
}

.integral {
  height: 100rpx;
  color: #ff3131;
  font-size: 36rpx;
  text-align: center;
  line-height: 100rpx;
}

.integral::before {
  content: "我的积分：";
  font-size: 30rpx;
  color: #697978;
}

.shop {
  height: 100%;
  padding: 0 30rpx;
  background: #fff;
}

.goods {
  height: 260rpx;
  padding: 35rpx 0 0 0;
}

.goods-left {
  float: left;
}

.goods-right {
  width: 400rpx;
  float: right;
  padding: 0 0 0 30rpx;
}

.goods-left>image {
  width: 260rpx;
  height: 260rpx;
}

.title {
 
  font-size: 32rpx;
  color: #050505;
  line-height: 45rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding: 10rpx 0 0 0;
}

.rate{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 130rpx 0 0 0;
}

.only,
.price{
  color: #5A5A5A;
  font-size: 24rpx;
}

.ico {
  width: 24rpx;
  height: 22rpx;
  margin: 0 5rpx;
}

.old::before{
  content: "￥";
}

.old::after{
  content: "+";
}

.old,
.new{
  color: #FF3131;
  font-size: 30rpx;
  line-height: 30rpx;
}

.only::before{
  content: "仅剩";
}

.only::after{
  content: "件";
}
